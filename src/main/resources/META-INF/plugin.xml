<idea-plugin>
    <id>com.phodal.gradal</id>
    <name>Template</name>
    <vendor>JetBrains</vendor>
    <description>dfskajflajlasjflasjdflkasjflsajflasjfslfjalfjslfjs</description>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.phodal.gradal.plugins.services.MyApplicationService"/>
        <projectService serviceImplementation="com.phodal.gradal.plugins.services.MyProjectService"/>
        <projectService serviceImplementation="com.phodal.gradal.plugins.gradle.GradleBuildInvoker"/>

        <externalProjectDataService
                implementation="com.phodal.gradal.plugins.gradle.data.service.PGradleModuleModelDataService"/>

        <facetType implementation="com.phodal.gradal.plugins.gradle.facet.GradleFacetType"/>

        <externalSystemOutputParserProvider implementation="com.phodal.gradal.plugins.gradle.build.output.GradleOutputParserProvider"
                                            id="gradle" order="first"/>

        <facet.toolWindow id="Build Variants"
                          facetIdList="android,android-gradle"
                          anchor="left"
                          secondary="true"
                          icon="PluginIcons.Console.Python"
                          factoryClass="com.phodal.gradal.plugins.gradle.variant.view.BuildVariantToolWindowFactory"/>

        <projectService serviceImplementation="com.phodal.gradal.plugins.gradle.variant.view.BuildVariantView"/>
    </extensions>

    <projectListeners>
        <listener class="com.phodal.gradal.plugins.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
    <actions>
        <action id="Gradle.Get"
                class="com.phodal.gradal.plugins.actions.BuildApkAction"
                text="Run Get Gradle" description="Build App">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
